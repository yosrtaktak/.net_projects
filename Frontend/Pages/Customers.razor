@page "/customers"
@inject Frontend.Services.IApiService ApiService
@inject Frontend.Services.IAuthService AuthService
@inject NavigationManager NavigationManager
@using Frontend.Models

<PageTitle>Customers - Car Rental System</PageTitle>

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-6 fw-bold">
                <i class="bi bi-people-fill text-primary"></i> Customer Management
            </h1>
            <p class="text-muted">View and manage customer information</p>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3 text-muted">Loading customers...</p>
        </div>
    }
    else if (!isAuthorized)
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle me-2"></i>
            You don't have permission to access this page. Admin or Employee role required.
        </div>
    }
    else if (!customers.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>No customers found.
        </div>
    }
    else
    {
        <!-- Search Bar -->
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="bi bi-search"></i>
                    </span>
                    <input type="text" class="form-control" placeholder="Search customers..." 
                           @bind="searchTerm" @bind:event="oninput" @bind:after="FilterCustomers">
                </div>
            </div>
        </div>

        <!-- Customers Table -->
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>License</th>
                                <th>Tier</th>
                                <th>Registration Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var customer in filteredCustomers)
                            {
                                <tr>
                                    <td><strong>#@customer.Id</strong></td>
                                    <td>
                                        <div>
                                            <strong>@customer.FirstName @customer.LastName</strong>
                                            <br>
                                            <small class="text-muted">@customer.DateOfBirth.ToString("MMM dd, yyyy")</small>
                                        </div>
                                    </td>
                                    <td>
                                        <i class="bi bi-envelope"></i> @customer.Email
                                    </td>
                                    <td>
                                        <i class="bi bi-telephone"></i> @customer.PhoneNumber
                                    </td>
                                    <td>
                                        <code>@customer.DriverLicenseNumber</code>
                                    </td>
                                    <td>
                                        <span class="badge @GetTierBadgeClass(customer.Tier)">
                                            @customer.Tier
                                        </span>
                                    </td>
                                    <td>@customer.RegistrationDate.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-primary" 
                                                @onclick="() => ViewCustomerDetails(customer.Id)">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @if (!filteredCustomers.Any())
                {
                    <div class="text-center py-4 text-muted">
                        <i class="bi bi-search"></i> No customers match your search criteria.
                    </div>
                }
            </div>
        </div>

        <!-- Customer Statistics -->
        <div class="row mt-4 g-3">
            <div class="col-md-3">
                <div class="card border-0 bg-primary bg-opacity-10">
                    <div class="card-body">
                        <h6 class="text-muted mb-1">Total Customers</h6>
                        <h3 class="mb-0 text-primary">@customers.Count</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-0 bg-success bg-opacity-10">
                    <div class="card-body">
                        <h6 class="text-muted mb-1">Gold Members</h6>
                        <h3 class="mb-0 text-success">@customers.Count(c => c.Tier == CustomerTier.Gold)</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-0 bg-warning bg-opacity-10">
                    <div class="card-body">
                        <h6 class="text-muted mb-1">Platinum Members</h6>
                        <h3 class="mb-0 text-warning">@customers.Count(c => c.Tier == CustomerTier.Platinum)</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-0 bg-info bg-opacity-10">
                    <div class="card-body">
                        <h6 class="text-muted mb-1">New This Month</h6>
                        <h3 class="mb-0 text-info">@customers.Count(c => c.RegistrationDate.Month == DateTime.Now.Month)</h3>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private List<Customer> customers = new();
    private List<Customer> filteredCustomers = new();
    private string searchTerm = string.Empty;
    private bool isLoading = true;
    private bool isAuthorized = false;

    protected override async Task OnInitializedAsync()
    {
        isLoading = true;
        
        var role = await AuthService.GetRoleAsync();
        isAuthorized = role == "Admin" || role == "Employee";

        if (!isAuthorized)
        {
            isLoading = false;
            return;
        }

        await LoadCustomers();
    }

    private async Task LoadCustomers()
    {
        isLoading = true;
        customers = await ApiService.GetCustomersAsync();
        filteredCustomers = customers;
        isLoading = false;
    }

    private void FilterCustomers()
    {
        if (string.IsNullOrWhiteSpace(searchTerm))
        {
            filteredCustomers = customers;
        }
        else
        {
            var term = searchTerm.ToLower();
            filteredCustomers = customers.Where(c =>
                c.FirstName.ToLower().Contains(term) ||
                c.LastName.ToLower().Contains(term) ||
                c.Email.ToLower().Contains(term) ||
                c.PhoneNumber.Contains(term) ||
                c.DriverLicenseNumber.ToLower().Contains(term)
            ).ToList();
        }
    }

    private void ViewCustomerDetails(int customerId)
    {
        // Navigate to customer details page (to be implemented)
        NavigationManager.NavigateTo($"/customers/{customerId}");
    }

    private string GetTierBadgeClass(CustomerTier tier)
    {
        return tier switch
        {
            CustomerTier.Standard => "bg-secondary",
            CustomerTier.Silver => "bg-light text-dark",
            CustomerTier.Gold => "bg-warning text-dark",
            CustomerTier.Platinum => "bg-primary",
            _ => "bg-secondary"
        };
    }
}
