@page "/style-demo"
@using Frontend.Models

<PageTitle>Modern UI Style Demo</PageTitle>

<div class="manage-vehicles-container">
    <div class="page-header">
        <div class="header-content">
            <div class="header-text">
                <h1><i class="bi bi-palette"></i> Modern UI Style Demo</h1>
                <p>Showcase of all new styling components</p>
            </div>
        </div>
    </div>

    <!-- Stats Grid Demo -->
    <h2 class="mb-3">Stats Cards</h2>
    <div class="stats-grid">
        <div class="stat-card stat-card-primary">
            <div class="stat-icon"><i class="bi bi-car-front-fill"></i></div>
            <div class="stat-info">
                <div class="stat-value">42</div>
                <div class="stat-label">Total Vehicles</div>
            </div>
        </div>
        <div class="stat-card stat-card-success">
            <div class="stat-icon"><i class="bi bi-check-circle-fill"></i></div>
            <div class="stat-info">
                <div class="stat-value">28</div>
                <div class="stat-label">Available</div>
            </div>
        </div>
        <div class="stat-card stat-card-warning">
            <div class="stat-icon"><i class="bi bi-tools"></i></div>
            <div class="stat-info">
                <div class="stat-value">5</div>
                <div class="stat-label">In Maintenance</div>
            </div>
        </div>
        <div class="stat-card stat-card-info">
            <div class="stat-icon"><i class="bi bi-calendar-check"></i></div>
            <div class="stat-info">
                <div class="stat-value">9</div>
                <div class="stat-label">Rented</div>
            </div>
        </div>
    </div>

    <!-- Buttons Demo -->
    <h2 class="mb-3 mt-5">Modern Buttons</h2>
    <div class="d-flex gap-3 flex-wrap mb-4">
        <button class="btn-primary-custom">
            <i class="bi bi-plus-circle"></i>
            <span>Primary Button</span>
        </button>
        <button class="btn-secondary-custom">
            <i class="bi bi-x-circle"></i>
            <span>Secondary Button</span>
        </button>
        <button class="btn-warning-custom">
            <i class="bi bi-exclamation-triangle"></i>
            <span>Warning Button</span>
        </button>
        <button class="btn-danger-custom">
            <i class="bi bi-trash"></i>
            <span>Danger Button</span>
        </button>
    </div>

    <!-- Alerts Demo -->
    <h2 class="mb-3 mt-5">Alert Messages</h2>
    <div class="alert-custom alert-success mb-3">
        <i class="bi bi-check-circle-fill"></i>
        <span>Success! Your action was completed successfully.</span>
        <button class="alert-close"><i class="bi bi-x"></i></button>
    </div>
    <div class="alert-custom alert-danger mb-3">
        <i class="bi bi-exclamation-triangle-fill"></i>
        <span>Error! Something went wrong. Please try again.</span>
        <button class="alert-close"><i class="bi bi-x"></i></button>
    </div>

    <!-- Filter Tabs Demo -->
    <h2 class="mb-3 mt-5">Filter Tabs</h2>
    <div class="filter-section">
        <div class="filter-tabs">
            <button class="filter-tab active">
                All <span class="badge">42</span>
            </button>
            <button class="filter-tab">
                Available <span class="badge">28</span>
            </button>
            <button class="filter-tab">
                Maintenance <span class="badge">5</span>
            </button>
            <button class="filter-tab">
                Rented <span class="badge">9</span>
            </button>
        </div>
    </div>

    <!-- Vehicle Cards Demo -->
    <h2 class="mb-3 mt-5">Vehicle Cards</h2>
    <div class="vehicles-grid">
        <!-- Available Vehicle -->
        <div class="vehicle-card">
            <div class="vehicle-image">
                <div class="vehicle-image-placeholder">
                    <i class="bi bi-car-front"></i>
                </div>
                <div class="vehicle-status-badge status-available">Available</div>
            </div>
            <div class="vehicle-content">
                <div class="vehicle-header">
                    <h3>Toyota Camry</h3>
                    <span class="vehicle-year">2023</span>
                </div>
                <div class="vehicle-category">
                    <span class="category-badge">Sedan</span>
                </div>
                <div class="vehicle-details">
                    <div class="detail-item">
                        <i class="bi bi-card-text"></i>
                        <span>ABC-1234</span>
                    </div>
                    <div class="detail-item">
                        <i class="bi bi-speedometer2"></i>
                        <span>15,000 km</span>
                    </div>
                    <div class="detail-item">
                        <i class="bi bi-currency-dollar"></i>
                        <span>$45/day</span>
                    </div>
                </div>
                <div class="vehicle-actions">
                    <button class="action-btn" title="View History">
                        <i class="bi bi-clock-history"></i>
                    </button>
                    <button class="action-btn" title="Report Damage">
                        <i class="bi bi-exclamation-triangle"></i>
                    </button>
                    <button class="action-btn" title="Edit">
                        <i class="bi bi-pencil"></i>
                    </button>
                    <button class="action-btn action-btn-danger" title="Delete">
                        <i class="bi bi-trash"></i>
                    </button>
                </div>
            </div>
        </div>

        <!-- Maintenance Vehicle -->
        <div class="vehicle-card vehicle-card-warning">
            <div class="vehicle-image">
                <div class="vehicle-image-placeholder">
                    <i class="bi bi-car-front"></i>
                </div>
                <div class="vehicle-status-badge status-maintenance">Maintenance</div>
            </div>
            <div class="vehicle-content">
                <div class="vehicle-header">
                    <h3>Honda Civic</h3>
                    <span class="vehicle-year">2022</span>
                </div>
                <div class="vehicle-category">
                    <span class="category-badge">Compact</span>
                </div>
                <div class="vehicle-details">
                    <div class="detail-item">
                        <i class="bi bi-card-text"></i>
                        <span>XYZ-5678</span>
                    </div>
                    <div class="detail-item">
                        <i class="bi bi-speedometer2"></i>
                        <span>25,000 km</span>
                    </div>
                    <div class="detail-item">
                        <i class="bi bi-currency-dollar"></i>
                        <span>$35/day</span>
                    </div>
                </div>
                <div class="vehicle-alert">
                    <i class="bi bi-exclamation-circle"></i>
                    <span>Vehicle requires maintenance</span>
                </div>
                <button class="btn-quick-action btn-warning">
                    <i class="bi bi-tools"></i>
                    <span>Schedule Maintenance</span>
                </button>
                <div class="vehicle-actions">
                    <button class="action-btn">
                        <i class="bi bi-clock-history"></i>
                    </button>
                    <button class="action-btn">
                        <i class="bi bi-exclamation-triangle"></i>
                    </button>
                    <button class="action-btn">
                        <i class="bi bi-pencil"></i>
                    </button>
                    <button class="action-btn action-btn-danger">
                        <i class="bi bi-trash"></i>
                    </button>
                </div>
            </div>
        </div>

        <!-- Rented Vehicle -->
        <div class="vehicle-card">
            <div class="vehicle-image">
                <div class="vehicle-image-placeholder">
                    <i class="bi bi-car-front"></i>
                </div>
                <div class="vehicle-status-badge status-rented">Rented</div>
            </div>
            <div class="vehicle-content">
                <div class="vehicle-header">
                    <h3>BMW X5</h3>
                    <span class="vehicle-year">2024</span>
                </div>
                <div class="vehicle-category">
                    <span class="category-badge">SUV</span>
                </div>
                <div class="vehicle-details">
                    <div class="detail-item">
                        <i class="bi bi-card-text"></i>
                        <span>LMN-9012</span>
                    </div>
                    <div class="detail-item">
                        <i class="bi bi-speedometer2"></i>
                        <span>5,000 km</span>
                    </div>
                    <div class="detail-item">
                        <i class="bi bi-currency-dollar"></i>
                        <span>$95/day</span>
                    </div>
                </div>
                <div class="vehicle-actions">
                    <button class="action-btn">
                        <i class="bi bi-clock-history"></i>
                    </button>
                    <button class="action-btn">
                        <i class="bi bi-exclamation-triangle"></i>
                    </button>
                    <button class="action-btn">
                        <i class="bi bi-pencil"></i>
                    </button>
                    <button class="action-btn action-btn-danger">
                        <i class="bi bi-trash"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Loading State Demo -->
    <h2 class="mb-3 mt-5">Loading State</h2>
    <div class="loading-state">
        <div class="loading-spinner"></div>
        <p>Loading vehicles...</p>
    </div>

    <!-- Empty State Demo -->
    <h2 class="mb-3 mt-5">Empty State</h2>
    <div class="empty-state">
        <i class="bi bi-inbox"></i>
        <h3>No Vehicles Found</h3>
        <p>Click "Add New Vehicle" to get started with your fleet.</p>
    </div>

    <!-- Form Elements Demo -->
    <h2 class="mb-3 mt-5">Form Elements</h2>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label>Text Input</label>
                <input type="text" class="form-control" placeholder="Enter text..." />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>Select Dropdown</label>
                <select class="form-control">
                    <option>Option 1</option>
                    <option>Option 2</option>
                    <option>Option 3</option>
                </select>
            </div>
        </div>
        <div class="col-12">
            <div class="form-group">
                <label>Textarea</label>
                <textarea class="form-control" rows="3" placeholder="Enter description..."></textarea>
            </div>
        </div>
    </div>

    <div class="mt-5 mb-5">
        <a href="/" class="btn-primary-custom">
            <i class="bi bi-arrow-left"></i>
            <span>Back to Home</span>
        </a>
    </div>
</div>

