@page "/about"
@layout CustomerLayout
@using Frontend.Models

<PageTitle>About Us - Car Rental System</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large">
    <MudStack Spacing="6" Class="py-6">
        <!-- Hero Section -->
        <MudPaper Elevation="0" Class="pa-8 text-center" Style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; border-radius: 16px;">
            <MudStack Spacing="3" AlignItems="AlignItems.Center">
                <MudIcon Icon="@Icons.Material.Filled.DirectionsCar" Size="Size.Large" Style="font-size: 5rem;" />
                <MudText Typo="Typo.h2"><strong>About Car Rental System</strong></MudText>
                <MudText Typo="Typo.h6" Style="max-width: 800px;">
                    Your trusted partner for quality vehicle rentals. We provide reliable, well-maintained vehicles for all your travel needs.
                </MudText>
            </MudStack>
        </MudPaper>

        <!-- Mission & Vision -->
        <MudGrid Spacing="4">
            <MudItem xs="12" md="6">
                <MudCard Elevation="4" Style="height: 100%;">
                    <MudCardContent>
                        <MudStack Spacing="3">
                            <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2">
                                <MudIcon Icon="@Icons.Material.Filled.Flag" Color="Color.Primary" Size="Size.Large" />
                                <MudText Typo="Typo.h5" Color="Color.Primary"><strong>Our Mission</strong></MudText>
                            </MudStack>
                            <MudText Typo="Typo.body1">
                                To provide exceptional car rental services that exceed customer expectations through 
                                quality vehicles, competitive pricing, and outstanding customer service. We strive to 
                                make every journey comfortable, safe, and memorable.
                            </MudText>
                        </MudStack>
                    </MudCardContent>
                </MudCard>
            </MudItem>
            <MudItem xs="12" md="6">
                <MudCard Elevation="4" Style="height: 100%;">
                    <MudCardContent>
                        <MudStack Spacing="3">
                            <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2">
                                <MudIcon Icon="@Icons.Material.Filled.Visibility" Color="Color.Secondary" Size="Size.Large" />
                                <MudText Typo="Typo.h5" Color="Color.Secondary"><strong>Our Vision</strong></MudText>
                            </MudStack>
                            <MudText Typo="Typo.body1">
                                To be the leading car rental company recognized for innovation, reliability, and 
                                customer satisfaction. We envision a future where renting a car is seamless, 
                                affordable, and accessible to everyone.
                            </MudText>
                        </MudStack>
                    </MudCardContent>
                </MudCard>
            </MudItem>
        </MudGrid>

        <!-- Why Choose Us -->
        <MudPaper Elevation="2" Class="pa-6">
            <MudStack Spacing="4">
                <MudText Typo="Typo.h4" Align="Align.Center"><strong>Why Choose Us?</strong></MudText>
                
                <MudGrid Spacing="3">
                    <MudItem xs="12" sm="6" md="3">
                        <MudPaper Elevation="0" Class="pa-4 text-center" Style="background-color: var(--mud-palette-background-grey);">
                            <MudStack Spacing="2" AlignItems="AlignItems.Center">
                                <MudIcon Icon="@Icons.Material.Filled.VerifiedUser" Color="Color.Success" Size="Size.Large" Style="font-size: 3rem;" />
                                <MudText Typo="Typo.h6"><strong>Quality Vehicles</strong></MudText>
                                <MudText Typo="Typo.body2" Color="Color.Secondary">
                                    All our vehicles are regularly maintained and thoroughly inspected for safety and reliability.
                                </MudText>
                            </MudStack>
                        </MudPaper>
                    </MudItem>
                    
                    <MudItem xs="12" sm="6" md="3">
                        <MudPaper Elevation="0" Class="pa-4 text-center" Style="background-color: var(--mud-palette-background-grey);">
                            <MudStack Spacing="2" AlignItems="AlignItems.Center">
                                <MudIcon Icon="@Icons.Material.Filled.AttachMoney" Color="Color.Warning" Size="Size.Large" Style="font-size: 3rem;" />
                                <MudText Typo="Typo.h6"><strong>Competitive Pricing</strong></MudText>
                                <MudText Typo="Typo.body2" Color="Color.Secondary">
                                    We offer transparent pricing with no hidden fees. Get the best value for your money.
                                </MudText>
                            </MudStack>
                        </MudPaper>
                    </MudItem>
                    
                    <MudItem xs="12" sm="6" md="3">
                        <MudPaper Elevation="0" Class="pa-4 text-center" Style="background-color: var(--mud-palette-background-grey);">
                            <MudStack Spacing="2" AlignItems="AlignItems.Center">
                                <MudIcon Icon="@Icons.Material.Filled.SupportAgent" Color="Color.Info" Size="Size.Large" Style="font-size: 3rem;" />
                                <MudText Typo="Typo.h6"><strong>24/7 Support</strong></MudText>
                                <MudText Typo="Typo.body2" Color="Color.Secondary">
                                    Our dedicated support team is available round the clock to assist you.
                                </MudText>
                            </MudStack>
                        </MudPaper>
                    </MudItem>
                    
                    <MudItem xs="12" sm="6" md="3">
                        <MudPaper Elevation="0" Class="pa-4 text-center" Style="background-color: var(--mud-palette-background-grey);">
                            <MudStack Spacing="2" AlignItems="AlignItems.Center">
                                <MudIcon Icon="@Icons.Material.Filled.LocalOffer" Color="Color.Error" Size="Size.Large" Style="font-size: 3rem;" />
                                <MudText Typo="Typo.h6"><strong>Flexible Options</strong></MudText>
                                <MudText Typo="Typo.body2" Color="Color.Secondary">
                                    Choose from daily, weekly, or monthly rentals with flexible cancellation policies.
                                </MudText>
                            </MudStack>
                        </MudPaper>
                    </MudItem>
                </MudGrid>
            </MudStack>
        </MudPaper>

        <!-- Our Fleet -->
        <MudPaper Elevation="2" Class="pa-6">
            <MudStack Spacing="3">
                <MudText Typo="Typo.h4" Align="Align.Center"><strong>Our Fleet</strong></MudText>
                <MudText Typo="Typo.body1" Align="Align.Center" Color="Color.Secondary">
                    We offer a diverse range of vehicles to suit every need and budget
                </MudText>
                
                <MudGrid Spacing="3" Class="mt-2">
                    <MudItem xs="12" sm="6" md="4">
                        <MudCard Elevation="2">
                            <MudCardContent>
                                <MudStack Spacing="2" AlignItems="AlignItems.Center">
                                    <MudIcon Icon="@Icons.Material.Filled.DirectionsCar" Color="Color.Info" Size="Size.Large" />
                                    <MudText Typo="Typo.h6"><strong>Economy Cars</strong></MudText>
                                    <MudText Typo="Typo.body2" Color="Color.Secondary" Align="Align.Center">
                                        Perfect for budget-conscious travelers. Fuel-efficient and easy to park.
                                    </MudText>
                                </MudStack>
                            </MudCardContent>
                        </MudCard>
                    </MudItem>
                    
                    <MudItem xs="12" sm="6" md="4">
                        <MudCard Elevation="2">
                            <MudCardContent>
                                <MudStack Spacing="2" AlignItems="AlignItems.Center">
                                    <MudIcon Icon="@Icons.Material.Filled.DirectionsCar" Color="Color.Success" Size="Size.Large" />
                                    <MudText Typo="Typo.h6"><strong>SUVs & Vans</strong></MudText>
                                    <MudText Typo="Typo.body2" Color="Color.Secondary" Align="Align.Center">
                                        Spacious vehicles ideal for family trips and group travel.
                                    </MudText>
                                </MudStack>
                            </MudCardContent>
                        </MudCard>
                    </MudItem>
                    
                    <MudItem xs="12" sm="6" md="4">
                        <MudCard Elevation="2">
                            <MudCardContent>
                                <MudStack Spacing="2" AlignItems="AlignItems.Center">
                                    <MudIcon Icon="@Icons.Material.Filled.DirectionsCar" Color="Color.Warning" Size="Size.Large" />
                                    <MudText Typo="Typo.h6"><strong>Luxury Vehicles</strong></MudText>
                                    <MudText Typo="Typo.body2" Color="Color.Secondary" Align="Align.Center">
                                        Premium cars for special occasions and business travel.
                                    </MudText>
                                </MudStack>
                            </MudCardContent>
                        </MudCard>
                    </MudItem>
                </MudGrid>
            </MudStack>
        </MudPaper>

        <!-- Statistics -->
        <MudGrid Spacing="3">
            <MudItem xs="12" sm="6" md="3">
                <MudPaper Elevation="4" Class="pa-6 text-center" Style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
                    <MudStack Spacing="2" AlignItems="AlignItems.Center">
                        <MudText Typo="Typo.h2"><strong>500+</strong></MudText>
                        <MudText Typo="Typo.h6">Vehicles</MudText>
                    </MudStack>
                </MudPaper>
            </MudItem>
            <MudItem xs="12" sm="6" md="3">
                <MudPaper Elevation="4" Class="pa-6 text-center" Style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); color: white;">
                    <MudStack Spacing="2" AlignItems="AlignItems.Center">
                        <MudText Typo="Typo.h2"><strong>10,000+</strong></MudText>
                        <MudText Typo="Typo.h6">Happy Customers</MudText>
                    </MudStack>
                </MudPaper>
            </MudItem>
            <MudItem xs="12" sm="6" md="3">
                <MudPaper Elevation="4" Class="pa-6 text-center" Style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%); color: white;">
                    <MudStack Spacing="2" AlignItems="AlignItems.Center">
                        <MudText Typo="Typo.h2"><strong>15+</strong></MudText>
                        <MudText Typo="Typo.h6">Years Experience</MudText>
                    </MudStack>
                </MudPaper>
            </MudItem>
            <MudItem xs="12" sm="6" md="3">
                <MudPaper Elevation="4" Class="pa-6 text-center" Style="background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%); color: white;">
                    <MudStack Spacing="2" AlignItems="AlignItems.Center">
                        <MudText Typo="Typo.h2"><strong>98%</strong></MudText>
                        <MudText Typo="Typo.h6">Satisfaction Rate</MudText>
                    </MudStack>
                </MudPaper>
            </MudItem>
        </MudGrid>

        <!-- Call to Action -->
        <MudPaper Elevation="4" Class="pa-8 text-center" Style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; border-radius: 16px;">
            <MudStack Spacing="3" AlignItems="AlignItems.Center">
                <MudText Typo="Typo.h4"><strong>Ready to Hit the Road?</strong></MudText>
                <MudText Typo="Typo.h6">
                    Browse our selection and book your perfect vehicle today!
                </MudText>
                <MudButton Href="/vehicles/browse" 
                           Variant="Variant.Filled" 
                           Color="Color.Surface"
                           Size="Size.Large"
                           StartIcon="@Icons.Material.Filled.DirectionsCar"
                           Style="color: #667eea;">
                    Browse Vehicles
                </MudButton>
            </MudStack>
        </MudPaper>

        <!-- Contact Information -->
        <MudPaper Elevation="2" Class="pa-6">
            <MudStack Spacing="3">
                <MudText Typo="Typo.h4" Align="Align.Center"><strong>Get In Touch</strong></MudText>
                
                <MudGrid Spacing="3">
                    <MudItem xs="12" md="4">
                        <MudPaper Elevation="0" Class="pa-4 text-center" Style="background-color: var(--mud-palette-background-grey);">
                            <MudStack Spacing="2" AlignItems="AlignItems.Center">
                                <MudIcon Icon="@Icons.Material.Filled.Email" Color="Color.Primary" Size="Size.Large" />
                                <MudText Typo="Typo.h6"><strong>Email Us</strong></MudText>
                                <MudText Typo="Typo.body2" Color="Color.Secondary">info@carrental.com</MudText>
                                <MudText Typo="Typo.body2" Color="Color.Secondary">support@carrental.com</MudText>
                            </MudStack>
                        </MudPaper>
                    </MudItem>
                    
                    <MudItem xs="12" md="4">
                        <MudPaper Elevation="0" Class="pa-4 text-center" Style="background-color: var(--mud-palette-background-grey);">
                            <MudStack Spacing="2" AlignItems="AlignItems.Center">
                                <MudIcon Icon="@Icons.Material.Filled.Phone" Color="Color.Success" Size="Size.Large" />
                                <MudText Typo="Typo.h6"><strong>Call Us</strong></MudText>
                                <MudText Typo="Typo.body2" Color="Color.Secondary">+1 (555) 123-4567</MudText>
                                <MudText Typo="Typo.body2" Color="Color.Secondary">Available 24/7</MudText>
                            </MudStack>
                        </MudPaper>
                    </MudItem>
                    
                    <MudItem xs="12" md="4">
                        <MudPaper Elevation="0" Class="pa-4 text-center" Style="background-color: var(--mud-palette-background-grey);">
                            <MudStack Spacing="2" AlignItems="AlignItems.Center">
                                <MudIcon Icon="@Icons.Material.Filled.LocationOn" Color="Color.Error" Size="Size.Large" />
                                <MudText Typo="Typo.h6"><strong>Visit Us</strong></MudText>
                                <MudText Typo="Typo.body2" Color="Color.Secondary">123 Main Street</MudText>
                                <MudText Typo="Typo.body2" Color="Color.Secondary">City, State 12345</MudText>
                            </MudStack>
                        </MudPaper>
                    </MudItem>
                </MudGrid>
            </MudStack>
        </MudPaper>
    </MudStack>
</MudContainer>
